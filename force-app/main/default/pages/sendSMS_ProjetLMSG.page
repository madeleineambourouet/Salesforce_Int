    <form id='formSMS'>
        <div class="sf1form">
            <input class='sf1input' id='Particulier__c' name='Particulier__c' type='hidden' value='{!AccountX.Id}'/>
            <input class='sf1input' id='idproj' name='idproj' type='hidden' value='{!projetX.Id}'/>
            <input class='sf1input' id='contactId' name='contactId' type='hidden' value='{!ContactX.Id}'/>

            <span class='sf1label'>Sélectionner un numéro :</span>
           
            <select id='phoneNumber' name='phoneNumber' class="sf1select">
            <script>
               if ("{!JSINHTMLENCODE(AccountX.PersonMobilePhone)}"!="") {
                   document.write("<option value='{!JSINHTMLENCODE(AccountX.PersonMobilePhone)}'>Mobile: {!JSINHTMLENCODE(AccountX.PersonMobilePhone)}</option>");
               }
               if ("{!JSINHTMLENCODE(AccountX.Phone)}"!="") {
                   document.write("<option value='{!JSINHTMLENCODE(AccountX.Phone)}'>Phone: {!JSINHTMLENCODE(AccountX.Phone)}</option>");
               }
               if ("{!JSINHTMLENCODE(AccountX.PersonHomePhone)}"!="") {
                   document.write("<option value='{!JSINHTMLENCODE(AccountX.PersonHomePhone)}'>Home: {!JSINHTMLENCODE(AccountX.PersonHomePhone)}</option>");
                   }
               if ("{!JSINHTMLENCODE(AccountX.PersonOtherPhone)}"!="") {
                   document.write("<option value='{!JSINHTMLENCODE(AccountX.PersonOtherPhone)}'>Other: {!JSINHTMLENCODE(AccountX.PersonOtherPhone)}</option>");
               }
               if ("{!JSINHTMLENCODE(AccountX.PersonAssistantPhone)}"!="") { 
                   document.write("<option value='{!JSINHTMLENCODE(AccountX.PersonAssistantPhone)}'>Assistant: {!JSINHTMLENCODE(AccountX.PersonAssistantPhone)}</option>");
               }
            </script>
            </select>
            <br/>&nbsp;<br/>
            <span class='sf1label'>Sélectionner un modèle :</span>
            <select id='templateId' name='templateId' class="sf1select" onchange="retreiveTemplate();">
                <option value=''>Aucun modèle sélectionné</option>
                   <apex:repeat value="{!templates}" var="template" id="theRepeat">
                        <option value='{!JSINHTMLENCODE(template.id)}'>{!JSINHTMLENCODE(template.name)}</option>
                    </apex:repeat>
            </select>
            <br/>&nbsp;<br/>
            <span class='sf1label'>Entrer votre message à envoyer :</span>
            <textarea class='sf1textarea' id='textMessage' name='textMessage' rows="3" cols="35"/>
            <br/>&nbsp;<br/>
            <button type="button" class='sf1buttonSFBlue' onclick="sendFormSMS();">Envoyer SMS</button>
        </div>
    </form>
 
<script type='text/javascript' src='/canvas/sdk/js/publisher.js'></script>
<script>
        //alert("Def Fct begin");
 
        if (isSalesForce1()) document.getElementById("formSMS").style.backgroundColor="#f0f1f2";
 
        function isSalesForce1() {
            if( (typeof sforce != 'undefined') && (sforce != null) ) {
                // Salesforce1
                //alert("Salesforce1");
                return true;
            } else {
                //alert("Desktop");
                return false;
            }
        }
 
        function sendFormSMS() {
                //alert("sendFormSMS()");
                var inputData = {"apexType":"VFP02_WriteSms_Mobile_ProjetLMSG_Contrl.ImputData"};
                 
                console.log(document.getElementById("phoneNumber").value);
                console.log(document.getElementById("textMessage"));
                console.log(document.getElementById("templateId"));
                console.log(document.getElementById("Particulier__c"));
                console.log(document.getElementById("idproj"));
            
                inputData.phoneNumber = document.getElementById("phoneNumber").value; 
                inputData.textMessage = document.getElementById("textMessage").value;
                inputData.templateId= document.getElementById("templateId").value;  
                inputData.ParticulierId = document.getElementById("Particulier__c").value;  
                inputData.ProjetId = document.getElementById("idproj").value; 
                inputData.contactId = document.getElementById("contactId").value;  
                VFP02_WriteSms_Mobile_ProjetLMSG_Contrl.submitData(inputData, function(result, event) {
                    if (result=="OK") {
                        alert("Message Envoyé!");
                        document.getElementById("textMessage").value="";
                        document.getElementById("templateId").selectedIndex = "0";
                        Sfdc.canvas.publisher.publish({ name: "publisher.close", payload:{ refresh:"true" }});
                        refreshFeed();
                    } else {
                        alert(result);
                    }
                });
        }
        function refreshFeed() {
            //alert("refreshFeed()");
            Sfdc.canvas.publisher.publish({name : 'publisher.refresh', payload : {feed: true}}); 
        }
        function retreiveTemplate() {
                console.log(document.getElementById("phoneNumber").value);
                console.log(document.getElementById("textMessage"));
                console.log(document.getElementById("templateId"));
                console.log(document.getElementById("Particulier__c"));
                console.log(document.getElementById("idproj"));
                //alert("retreiveTemplate()");
                var inputData = {"apexType":"VFP02_WriteSms_Mobile_ProjetLMSG_Contrl.ImputData"};
                inputData.phoneNumber = document.getElementById("phoneNumber").value; 
                inputData.textMessage = document.getElementById("textMessage").value;
                inputData.templateId= document.getElementById("templateId").value;  
                inputData.ParticulierId = document.getElementById("Particulier__c").value;  
                inputData.ProjetId = document.getElementById("idproj").value; 
                inputData.contactId = document.getElementById("contactId").value;  
                VFP02_WriteSms_Mobile_ProjetLMSG_Contrl.retreiveTemplate(inputData, function(result, event) {
                    //alert(result);
                    document.getElementById("textMessage").value=result;
                });
        }
 
        // SALESFORCE 1 : Activate Submit button Menu
        Sfdc.canvas.publisher.subscribe({name: "publisher.showPanel",
            onData:function(e) {
                //alert("publisher.showPanel");
                Sfdc.canvas.publisher.publish({name:"publisher.setValidForSubmit", payload:"true"});
        }});
        Sfdc.canvas.publisher.subscribe({ name: "publisher.post",
            onData: function(e) {
                //alert("publisher.post");
                sendFormSMS();
        }});
 
        //alert("Def Fct end");
    </script>
 
